<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opti">

    <Spinner
        android:id="@+id/spinnerdestination"
        android:layout_width="278dp"
        android:layout_height="0dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/ali"
        android:entries="@array/ilce"
        app:layout_constraintBottom_toTopOf="@+id/spinnerhour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <Spinner
        android:id="@+id/spinnerhour"
        android:layout_width="0dp"
        android:layout_height="55dp"

        android:layout_marginStart="105dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/zaman"
        android:entries="@array/hour"
        app:layout_constraintBottom_toTopOf="@+id/slcbtn"
        app:layout_constraintEnd_toStartOf="@+id/spinnerminute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerdestination" />

    <Spinner
        android:id="@+id/spinnerminute"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="209dp"
        android:background="@drawable/zaman"
        android:entries="@array/minute"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinnerhour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerhour" />


    <Button
        android:id="@+id/slcbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="270dp"
        android:background="@drawable/yensel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerhour" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerdestination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yukarisi"
                android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/MenuStyle">

                <TextView
                    android:id="@+id/userssnamees1"
                    android:layout_width="254dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>